#!/bin/bash

sed -i -e '/MatchIsKeyboard.*on/a        Option "XkbLayout" "'$KEYMAP'"' /etc/X11/xorg.conf.d/10-evdev.conf

echo exec i3 > /root/.xinitrc
chmod a+x /root/.xinitrc

echo exec i3 > "/home/$NEW_USER"/.xinitrc
chmod a+x "/home/$NEW_USER"/.xinitrc
chown "$NEW_USER":users "/home/$NEW_USER"/.xinitrc

cat > "/usr/local/bin/aoeu" <<EOF
#!/bin/sh
setxkbmap us
EOF

cat > "/usr/local/bin/asdf" <<EOF
#!/bin/sh
setxkbmap dvorak
EOF

chmod a+x "/usr/local/bin/"{aoeu,asdf}
